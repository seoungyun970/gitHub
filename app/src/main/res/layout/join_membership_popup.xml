<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffbb34"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30dp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/li_id"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="아이디" />

            <EditText
                android:id="@+id/register_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/doublecheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bt_yellow"
                android:text="중복검사" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_pw"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="비밀번호" />

            <EditText
                android:id="@+id/register_pw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="이름" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="직업" />

            <RadioGroup
                android:id="@+id/rgroup_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="학부모" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="교사" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="원장" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_gender"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="성별" />

            <RadioGroup
                android:id="@+id/rgroup_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/reg_Male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="남" />

                <RadioButton
                    android:id="@+id/reg_Female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="여" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_checkBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_yellow"
        android:text="확인" />
</RelativeLayout>